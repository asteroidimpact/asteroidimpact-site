---
// /play — embeds the Asteroid Impact demo WebGL build
// The game is served at asteroidimpact.github.io/ai_crystal_diss/?mode=demo
// ?mode=demo activates DemoPrefsGroup: neutral settings, no data collection.
const GAME_URL = 'https://asteroidimpact.github.io/ai_crystal_diss/?mode=demo';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Play Asteroid Impact</title>
    <meta name="description" content="Play Asteroid Impact — an arcade game designed for cognitive science research." />
    <link rel="stylesheet" href="/src/styles/custom.css" />
    <style>
      * { box-sizing: border-box; margin: 0; padding: 0; }
      body {
        font-family: system-ui, sans-serif;
        background: #060d1a;
        color: #e8f0fe;
        min-height: 100dvh;
        display: flex;
        flex-direction: column;
      }
      header {
        padding: 1rem 2rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        border-bottom: 1px solid #1e2d4a;
      }
      header a {
        color: #93c5fd;
        text-decoration: none;
        font-size: 0.9rem;
      }
      header a:hover { text-decoration: underline; }
      header h1 { font-size: 1.1rem; font-weight: 600; }
      main {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 2rem 1rem;
        gap: 1.5rem;
        max-width: 1100px;
        margin: 0 auto;
        width: 100%;
      }
      .game-wrapper {
        width: 100%;
        max-width: 960px;
        aspect-ratio: 16 / 9;
        border: 1px solid #1e2d4a;
        border-radius: 8px;
        overflow: hidden;
        background: #000;
      }
      iframe {
        width: 100%;
        height: 100%;
        border: none;
      }
      .instructions {
        max-width: 640px;
        text-align: center;
        color: #7a9cc8;
        font-size: 0.9rem;
        line-height: 1.6;
      }
      .instructions strong { color: #c7d7f5; }
      .links { display: flex; gap: 1.5rem; font-size: 0.85rem; }
      .links a { color: #93c5fd; text-decoration: none; }
      .links a:hover { text-decoration: underline; }
    </style>
  </head>
  <body>
    <header>
      <h1>Asteroid Impact</h1>
      <nav>
        <a href="/asteroidimpact-site/">← Home</a>
        &nbsp;·&nbsp;
        <a href="/asteroidimpact-site/docs/overview">Documentation</a>
        &nbsp;·&nbsp;
        <a href="https://github.com/asteroidimpact/ai_crystal_diss" target="_blank" rel="noopener">GitHub</a>
      </nav>
    </header>
    <main>
      <div class="game-wrapper">
        <iframe
          src={GAME_URL}
          title="Asteroid Impact demo"
          allow="fullscreen"
          loading="lazy"
        ></iframe>
      </div>
      <p class="instructions">
        <strong>How to play:</strong> Move your ship with your mouse. Collect crystals, avoid asteroids,
        and press <strong>Z</strong> or <strong>X</strong> when you see a shape appear on screen.
        This is a demo — no data is collected.
      </p>
      <div class="links">
        <a href="/docs/overview">Learn about the research</a>
        <a href="/docs/configuration">Configure your own study</a>
        <a href="https://osf.io/38der" target="_blank" rel="noopener">OSF repository</a>
      </div>
    </main>
  </body>
</html>
